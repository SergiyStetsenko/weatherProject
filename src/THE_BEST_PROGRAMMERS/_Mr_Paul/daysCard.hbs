{{#each this}}
<li class="days_list_item">

    <p class="days_list_item_day">{{day}}</p>

    <div class="days_list_item_date">
        <p class="date">{{date}}</p>
        <p class="month">{{month}}</p>
    </div>

    <svg class="weather_icon">
        <use href="./sprite.svg#{{icon}}"></use>
    </svg>
    <div class="temperature-on-card">
        <div class="min-temp">
            <p class="temp-txt">min</p>
            <p class="temp-number">2&deg</p>
        </div>
        <div class="max-temp">
            <p class="temp-txt">max</p>
            <p class="temp-number">7&deg</p>
        </div>
    </div>

    <button class="more_info_btn">more info</button>
</li>
{{/each}}